@model SimplePDF.Controllers.JuntarController

<!DOCTYPE html>
<html>
    <head>
        
        <meta @Juntar.juntando content="0; url='/Juntar/Download'"/>
        <script src="~/js/jquery-3.6.0.js" type="text/javascript"></script>
        <link rel="stylesheet" href="~/css/Juntar.css" />
    </head>
    <body>
        <div style="width: 50px; height:50px;">

        </div>
        
        <form id="form" method="post" enctype="multipart/form-data" asp-controller="Juntar" asp-action="JuntarPDF">
            
            <div class="drop-zone">
               
                 <span class="drop-zone__prompt">Selecione os arquivos ou solte aqui</span>
                 <input type="file" name="filesupload" class="drop-zone__input" accept="application/pdf" multiple/>
            </div>
           <!-- <input type="file" name="filesupload1" multiple/> -->
            <input type="submit" value="Juntar" class="btnsInicio" style="margin-top: 30px;"/>
            <br />
            <h2 style="color: red;">@ViewData["Message"]</h2>
          
        </form>
        <script src="~/js/Juntar.js" type="text/javascript"></script>
    </body>
</html>